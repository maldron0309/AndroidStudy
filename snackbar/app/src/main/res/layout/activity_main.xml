<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/closeImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/close"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"/>


    <ImageView
        android:id="@+id/starbucksImageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="start"
        android:scaleType="fitCenter"
        android:src="@drawable/starbucks" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객님\n환영합니다!"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:layout_weight="1"/>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/welcomeTextView"
            android:layout_marginTop="100dp"
            android:background="#808080"/>

        <CheckBox
            android:id="@+id/box1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:text="이용약관 동의(필수)"
            android:textSize="13dp">
        </CheckBox>

        <CheckBox
            android:id="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box1"
            android:text="개인정보 수집 및 이용동의(필수)"
            android:textSize="13dp">
        </CheckBox>

        <CheckBox
            android:id="@+id/box3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box2"
            android:text="E-mail및 SMS광고성 정보 수신동의(선택)"
        android:textSize="13dp">
        </CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box3"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="10dp"
            android:text="다양한 프로모션 소식 및 신규 매장 정보를 보내 드립니다."
    </RelativeLayout>
</LinearLayout>
